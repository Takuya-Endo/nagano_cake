<p><%= attachment_image_tag @item, :image, :fill, 60, 60, format: 'jpg' 'png' %></p>
<p><%= @item.name %></p>
<p><%= @item.introduction %></p>
<p><%= @item.price %></p>

<%= form_with model:@cart_item, url: '/cart_items', local: true do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <span>数量</span><%= f.number_field :amount, size: 20, min: 1, placeholder: "個数選択" %>
  <%= f.submit 'カートに入れる' %>
<% end %>