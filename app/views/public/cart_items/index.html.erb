<h1>ショッピングカート</h1>

<table>
  <tr> <th>商品名</th> <th>単価(税込)</th> <th>数量</th> <th>小計</th> <th></th> </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= @item.name %></td>
      <td><%= @item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= @item.price * cart_item.amount %></td>
    </tr>
  <% end %>
</table>