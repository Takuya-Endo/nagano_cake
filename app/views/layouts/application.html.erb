<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-md navbar-light">
        <button type="button" class="btn btn-light"><h1><%= link_to "LOGO", root_path, class: "navbar-brand text-dark" %></h1></button>

        <!--会員ログイン中のヘッダー-->
        <% if customer_signed_in? %>
          <span class="col-md-5">ようこそ、<%= current_customer.last_name %>さん！</span>
          <ul class="navbar-nav navbar-expand-lg col-md-5">
            <li class="nav-item">
              <button type="button" class="mx-3 btn btn-light"><%= link_to "マイページ", '/customers/:current_customer', class: "text-dark" %></button>
            </li>
            <li class="nav-item">
              <button type="button" class="mx-3 btn btn-light"><%= link_to "商品一覧", items_path, class: "text-dark" %></button>
            </li>
            <li class="nav-item">
              <button type="button" class="mx-3 btn btn-light"><%= link_to "カート", cart_items_path, class: "text-dark" %></button>
            </li>
            <li class="nav-item">
              <button type="button" class="mx-3 btn btn-light"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "text-dark" %></button>
            </li>
          </ul>
        <% else %>

          <!--管理者ログイン中のヘッダー-->
          <% if admin_signed_in? %>
            <ul class="navbar-nav navbar-expand-lg col-md-5">
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "商品一覧", admin_items_path, class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "会員一覧", admin_customers_path, class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "注文履歴一覧", admin_orders_path, class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "text-dark" %></button>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav navbar-expand-lg col-md-5">
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "About", '/about', class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "商品一覧", items_path, class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "新規登録", new_customer_registration_path, class: "text-dark" %></button>
              </li>
              <li class="nav-item">
                <button type="button" class="mx-3 btn btn-light"><%= link_to "ログイン", new_customer_session_path, class: "text-dark" %></button>
              </li>
            </ul>
          <% end %>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
